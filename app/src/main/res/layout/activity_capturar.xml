<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trabalhopratico.grupo.pokemongoclone.controller.CapturarActivity">
    <fragment
        android:name="com.trabalhopratico.grupo.pokemongoclone.controller.CameraSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraFragment"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/explosao"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="@color/azul"
        android:id="@+id/pokemon"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pokeball_image_view"/>

</FrameLayout>
