<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trabalhopratico.grupo.pokemongoclone.controller.DetalhesPokedexActivity">


    <ImageView
        android:id="@+id/imgPokemonDetalhes"
        android:layout_width="223dp"
        android:layout_height="201dp"
        app:srcCompat="@drawable/p1"
        android:layout_marginLeft="80dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txtNumeroDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ³digo"
            android:textSize="24sp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="90dp" />

        <TextView
            android:id="@+id/txtNomeDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtQtdDetalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capiturados: n"
        android:textSize="24sp"
        android:layout_marginLeft="90dp"/>

    <Button
        android:id="@+id/btMapaDetalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locais das capituras"
        android:layout_marginLeft="90dp"
        android:onClick="detalhes"
        android:background="@drawable/buttons_border"/>
</LinearLayout>
